{
  "name": "@armelgeek/better-auth-booking",
  "version": "1.0.1-beta.0",
  "description": "A comprehensive booking and reservation system plugin for Better Auth with Stripe integration",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "author": {
    "name": "Armel Wanes",
    "email": "contact@armelgeek.com"
  },
  "keywords": [
    "better-auth",
    "booking",
    "reservation",
    "stripe",
    "payment",
    "scheduling",
    "calendar",
    "appointment",
    "restaurant",
    "hotel",
    "medical",
    "fitness",
    "events",
    "saas",
    "typescript",
    "react",
    "vue",
    "nextjs"
  ],
  "scripts": {
    "build": "unbuild",
    "typecheck": "tsc --noEmit",
    "dev": "unbuild --watch",
    "test": "vitest",
    "prepublishOnly": "npm run build && npm run typecheck",
    "publish:beta": "npm version prerelease --preid=beta && npm publish --tag beta",
    "publish:stable": "npm publish"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/armelgeek/better-auth-booking.git"
  },
  "bugs": {
    "url": "https://github.com/armelgeek/better-auth-booking/issues"
  },
  "homepage": "https://github.com/armelgeek/better-auth-booking#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.mjs",
      "require": "./dist/client.cjs"
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "./dist/index.d.ts"
      ],
      "client": [
        "./dist/client.d.ts"
      ]
    }
  },
  "peerDependencies": {
    "better-auth": "^0.12.0"
  },
  "dependencies": {
    "zod": "^3.24.1",
    "stripe": "^18.0.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "better-call": "catalog:",
    "better-sqlite3": "^11.6.0",
    "typescript": "^5.7.2",
    "unbuild": "^2.0.0",
    "vitest": "^1.6.0"
  }
}
